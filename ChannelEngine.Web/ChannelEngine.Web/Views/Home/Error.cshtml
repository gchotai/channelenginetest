@{
    Layout = "_Layout";
}

<h1>An error occurred!</h1>

@if (Model != null)
{
    <div class="alert alert-danger">
        @Model  <!-- This will display the error message passed from TempData -->
    </div>
}
else
{
    <div class="alert alert-danger">
        Something went wrong, please try again later.
    </div>
}
